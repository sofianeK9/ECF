{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <th>Genres</th>
            <td>{% for genre in genres %}{{ genre.nom }} {% if not loop.last %}, {% endif %} {% endfor %}</td>
            </tr>
            <tr>
                <th>AnneeEdition</th>
                <td>{{ livre.anneeEdition }}</td>
            </tr>
            <tr>
                <th>NombrePages</th>
                <td>{{ livre.nombrePages }}</td>
            </tr>
            <tr>
                <th>CodeIsbn</th>
                <td>{{ livre.codeIsbn }}</td>
            </tr>
             <tr>
                <th>Prenom</th>
                <td>{{ livre.auteur.prenom }}</td>
            </tr>
             <tr>
                <th>Nom</th>
                <td>{{ livre.auteur.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_livre_index') }}">back to list</a>

    <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('admin/livre/_delete_form.html.twig') }}
{% endblock %}
