{% extends 'base.html.twig' %}

{% block title %}Liste des Emprunts {% endblock %}

{% block body %}
    <h1> Liste des Emprunts </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>DateEmprunt</th>
                <th>DateRetour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.id }}</td>
                <td>{{ emprunt.emprunteur.nom }}</td>
                 <td>{{ emprunt.emprunteur.prenom }}</td>
                <td>{{ emprunt.dateEmprunt ? emprunt.dateEmprunt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ emprunt.dateRetour ? emprunt.dateRetour|date('Y-m-d H:i:s') : '' }}</td>               
                <td>
                    <a href="{{ path('app_admin_emprunt_show', {'id': emprunt.id}) }}">show</a>
                    <a href="{{ path('app_admin_emprunt_edit', {'id': emprunt.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_emprunt_new') }}">Create new</a>
{% endblock %}
